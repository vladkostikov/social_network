<div class="col-md-8">
  <% if @post %>
    <% @post.errors.each do |error| %>
      <div class="alert alert-danger" role="alert">
        <%= error.message %>
      </div>
    <% end %>
  <% end %>

  <%= form_for :post, url: '/posts', method: 'post' do |f| %>
    <div class="mb-3">
      <%= f.label :title, 'Заголовок', class: 'form-label' %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= f.label :topic, 'Тема', class: 'form-label' %>
      <%= f.select :topic,
                   options_from_collection_for_select(
                     @topics, 'id', 'title', @post.present? ? @post.topic_id : nil),
                   {}, class: 'form-select mb-3' %>
    </div>
    <div class="mb-3">
      <%= f.label :body, 'Текст', class: 'form-label' %>
      <%= f.text_area :body, rows: 5, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= f.submit 'Создать', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
